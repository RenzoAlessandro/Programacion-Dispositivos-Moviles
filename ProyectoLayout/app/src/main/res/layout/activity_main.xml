<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_height="match_parent"
    android:background="@drawable/back02"
    tools:context=".MainActivity">

    <ImageView
        app:srcCompat="@mipmap/logoregistrate"
        android:layout_width="match_parent"
        android:layout_height="198dp"/>

    <EditText
        android:id="@+id/edittext_name"
        android:layout_margin="10dp"
        android:hint="@string/txt_IngreseNombre"
        android:textColorHint="#15202E"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/edittext_email"
        android:layout_margin="10dp"
        android:hint="@string/txt_IngreseEmail"
        android:textColorHint="#15202E"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_margin="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <Button
            android:layout_weight="2"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:id="@+id/button_add"
            android:hint="@string/bt_Agregar"
            android:textColorHint="#FFFFFF"
            android:background="#6CBEBF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:layout_weight="2"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:id="@+id/button_cancelar"
            android:hint="@string/bt_Cancelar"
            android:textColorHint="#FFFFFF"
            android:background="#023A6A"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <TextView
        android:hint="@string/txt_Texto"
        android:textStyle="bold"
        android:textColorHint="#FFFFFF"
        android:layout_margin="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>